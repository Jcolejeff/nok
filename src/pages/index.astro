---
import Layout from "../layouts/Layout.astro";
import LandingPageHero from "components/LandingHero";
import Fade from "react-reveal/Fade";
import TextFormat from "lib/helpers/TextFormat";
import Features from "components/Features";

import InfoGrid from "components/InfoGrid";
---

<Layout title="NOK Animation and Studios">
	<section
		class="w-full"
		style={{
			background: ` #F8FAFC url('/images/hero_bg.png') no-repeat fixed  center / cover`,
		}}
	>
		<LandingPageHero client:load />
	</section>

	<section class="w-full scroll-mt-28 bg-primary-2" id="download">
		<!-- info grid icon cards sections -->
		<section
			class="container relative grid w-full max-w-[1700px] gap-[5rem] rounded-lg px-container-base py-[3rem] pb-20 md:py-[5rem] md:pb-[7.25rem] md:pt-[6rem] lg:px-container-lg xl:px-container-xl"
		>
			<InfoGrid client:only />
		</section>
	</section>
	<section class="w-full bg-primary-2">
		<section
			class="container relative w-full max-w-[1700px] px-container-base py-[3rem] md:pt-[6rem] lg:px-container-lg xl:px-container-xl"
		>
			<div class="flex flex-col items-center justify-center gap-6 2xl:gap-8">
				<Fade bottom client:load>
					<h1
						class="max-w-[80rem] text-center text-[1.6rem] font-[700] leading-[130%] tracking-[0.02rem] transition-all duration-500 ease-in-out md:leading-[5rem] md:tracking-[0.0225rem] lg:ml-[-0.2rem] lg:text-[2.6rem] xxl:text-[4rem]"
					>
						<TextFormat
							text={`NOK Studio: Leading the Way in Animation and VFX`}
							keyword={"NOK"}
							keywordClassName="text-secondary-1 transition-all duration-500 ease-in-out"
						/>
					</h1>
				</Fade>

				<div
					class="mb-5 flex flex-col items-center gap-4 transition-all duration-500 ease-in-out md:flex-row"
				>
					<Fade bottom client:load>
						<p class="text-center text-base font-bold text-primary-1 md:text-xl xl:text-2xl">
							We deliver top quality animations for your business, brand or personal use.
						</p>
					</Fade>
				</div>
			</div>
		</section>
	</section>
	<section class="w-full scroll-mt-[-20rem] bg-primary-1" id="features">
		<section
			class="container relative w-full max-w-[1700px] overflow-x-hidden px-container-base py-[3rem] text-white md:pb-[4rem] lg:px-container-lg lg:py-[3rem] lg:pb-[6rem] xl:px-container-xl xxl:py-[9rem]"
		>
			<Features client:only />
		</section>
	</section>
</Layout>

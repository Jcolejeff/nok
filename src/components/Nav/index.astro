---
import { Icon } from "astro-icon";
import NavDrop from "components/NavDrop";
import DpPlaceholder from "assets/dpPlaceholder.svg";
import Menu from "components/Menu";
import { url } from "lib/utils";

export interface Props {
	darkNavBg?: boolean;
}

export const prerender = true;

let { darkNavBg } = Astro.props;
---

<nav class="container max-w-[1700px] px-container-base lg:px-container-lg xl:px-container-xl">
	<div
		class="flex w-full items-center justify-between py-[1.2rem] md:pb-[1rem] md:pt-[1.5rem] lg:border-b-secondary-1 xxl:py-8"
	>
		<div class="flex w-full items-center gap-[2.5rem]">
			<a href="/" class="flex items-center gap-4">
				<img src={url("/images/logo.svg")} alt="" class="w-24 object-contain lg:w-32" />
			</a>
		</div>

		<div class="flex">
			<Menu client:only />
		</div>
	</div>
</nav>
